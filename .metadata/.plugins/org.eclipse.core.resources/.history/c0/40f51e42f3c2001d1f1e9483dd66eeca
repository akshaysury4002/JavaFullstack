package com.as;

import java.io.File;

public class FileHandeling {
	
	public void demo1()
	{
		//File file=new File("java.txt"); //its a file
		File file=new File("./files"); //its a directory
		
		if(file.isDirectory())
		{
			System.out.println("its a directory");
			
			
			File file2=new File(file, "akshay");
			file2.mkdir();
			 boolean stsSub = file2.exists();
	            System.out.println(!stsSub ? "✅ Successfuly Created" : "❌ Directory Already Exists");
	            if(!stsSub)
	                file2.mkdir();
			
			
		}
		else
		{
			System.out.println("its a file");
		}
		
	}

}
